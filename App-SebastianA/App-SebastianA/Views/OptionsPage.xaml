<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_SebastianA.Views.OptionsPage">
    <ContentPage.Content>
        <ScrollView>
            <FlexLayout Direction="Column">
                <Label Text="Seleccione una opcion"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center"
                       FontSize="25"/>

                <Grid Padding="10,20,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" x:Name="BtnCancionManagement" 
                            Text="Canciones" BackgroundColor="LightSlateGray"
                            HeightRequest="130" WidthRequest="100" FontSize="17"
                            CornerRadius="20" Clicked="BtnCancionManagement_Clicked"/>
                    <Button Grid.Row="0" Grid.Column="1" x:Name="BtnAlbumManagement"
                            Text="Albumes" BackgroundColor="SlateGray"
                            HeightRequest="130" WidthRequest="100" FontSize="17"
                            CornerRadius="20" Clicked="BtnAlbumesManagement_Clicked"/>
                    <Button Grid.Row="1" Grid.Column="0" x:Name="BtnArtistaManagement" 
                            Text="Artistas" BackgroundColor="LightSlateGray"
                            HeightRequest="130" WidthRequest="100" FontSize="17"
                            CornerRadius="20" Clicked="BtnArtistasManagement_Clicked"/>
                    <Button Grid.Row="1" Grid.Column="1" x:Name="BtnBandaManagement"
                            Text="Bandas" BackgroundColor="SlateGray"
                            HeightRequest="130" WidthRequest="100" FontSize="17"
                            CornerRadius="20" Clicked="BtnBandasManagement_Clicked"/>
                    <Button Grid.Row="2" Grid.Column="0" x:Name="BtnGeneroManagement" 
                            Text="Genero" BackgroundColor="LightSlateGray"
                            HeightRequest="130" WidthRequest="100" FontSize="17"
                            CornerRadius="20" Clicked="BtnGeneroManagement_Clicked"/>
                    <Button Grid.Row="2" Grid.Column="1" x:Name="BtnUsuarioManagement"
                            Text="Usuario" BackgroundColor="SlateGray"
                            HeightRequest="130" WidthRequest="100" FontSize="17"
                            CornerRadius="20" Clicked="BtnUsuarioManagement_Clicked"/>
                    <Button Grid.Row="3" Grid.Column="0" x:Name="BtnLogMusicaManagement"
                            Text="Nuevo Log" BackgroundColor="LightSlateGray"
                            HeightRequest="130" WidthRequest="100" FontSize="17"
                            CornerRadius="20" Clicked="BtnLogMusicaManagement_Clicked"/>
                    <Button Grid.Row="3" Grid.Column="1" x:Name="BtnCancelar"
                            Text="Ver Logs" BackgroundColor="SlateGray"
                            HeightRequest="130" WidthRequest="100" FontSize="17"
                            CornerRadius="20" Clicked="BtnVerLogsManagement_Clicked"/>
                </Grid>
            </FlexLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>