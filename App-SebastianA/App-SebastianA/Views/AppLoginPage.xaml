<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_SebastianA.Views.AppLoginPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="white">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50,50,50,250">
            <Entry x:Name="TxtNombre" Placeholder="Nombre de usuario" FontSize="25" 
                   Keyboard="Default"/>
            <Entry x:Name="TxtContra" Placeholder="Contrasenna" FontSize="25" 
                   Keyboard="Default" IsPassword="True"/>
            <Switch x:Name="SwVerContra" IsToggled="False" 
                    Toggled="SwVerContra_Toggled"/>
            
            <Button x:Name="BtnLogin" Text="Log in" BackgroundColor="LightSlateGray" 
                    FontSize="25" CornerRadius="10" Clicked="BtnLogIn_Clicked"/>
            <Button x:Name="BtnSignUp" Text="Sign up" BackgroundColor="LightGray" 
                    FontSize="25" CornerRadius="10" Clicked="BtnSignUp_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>